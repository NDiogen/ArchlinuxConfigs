{
// Theme and colors
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Material Theme Ocean",
    "editor.fontFamily": "Input Mono",
    "customizeUI.font.regular": "Input Mono",
    "customizeUI.font.monospace": "Input Mono",
    "vim.easymotionMarkerFontFamily": "Input Mono",
    "vim.easymotionMarkerBackgroundColor": "Black",
    "vim.easymotionMarkerForegroundColorOneChar": "White",
    "vim.easymotionMarkerForegroundColorTwoChar": "White",

    "editor.wordWrap": "on",
// Vim config
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.hlsearch": true,
    "vim.searchHighlightColor": "DarkGreen",
    "vim.easymotion": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // EasyMotion keys
        {
            "before": ["<C-j>"],
            "after": ["leader", "leader", "j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["leader", "leader", "k"]
        },
        {
            "before": ["<C-h>"],
            "after": ["leader", "leader", "w"]
        },
        {
            "before": ["<C-b>"],
            "after": ["leader", "leader", "b"]
        },
        {
            "before": ["q"],
            "commands": [
                "workbench.action.showCommands"
            ]
        },

        // Search
        {
            "before": [ "g", "a" ],
            "commands": [ "workbench.action.gotoSymbol" ]
        },
        {
            "before": [ "g", "f" ],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [ "g", "s" ],
            "commands": [ "workbench.action.showAllSymbols" ]
        },
        {
            "before": [ "g", "b" ],
            "commands": [ "workbench.action.showAllEditors" ]
        },
        {
            "before": [ "g", "d" ],
            "commands": [ "editor.action.goToDeclaration" ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.goToReferences" ]
        },
        {
            "before": [ "g", "<C-f>" ],
            "commands": [ "workbench.action.findInFiles" ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.goToReferences" ]
        },
        // Debug
        {
            "before": [ "t", "b" ],
            "commands": [ "editor.debug.action.toggleBreakpoint" ]
        },

    ],
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "workbench.editor.showTabs": true,
}