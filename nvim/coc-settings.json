{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": ["--log-file=/tmp/lsp-ccls.log"],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
              "cacheDirectory": "/tmp/ccls"
            }
        },
        "glslls": {
            "command": "glslls",
            "args": ["--stdin"],
            "filetypes": ["glsl"]
        }
    }
}
