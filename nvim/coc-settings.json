{
    "languageserver": {
        "ccls": {
            "command": "clangd",
            "args": ["--background-index"],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": ["compile_commands.json"],
            "initializationOptions": {
            }
        },
        "glslls": {
            "command": "glslls",
            "args": ["--stdin"],
            "filetypes": ["glsl"]
        }
    }
}
